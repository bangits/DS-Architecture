{
  "extends": "configs/react-library.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@mui/react/*": ["./src/*"],
      "@mui/core": ["../core/src"],
      "@mui/core/*": ["../core/src/*"]
    }
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "**/__mocks__/*"]
}
