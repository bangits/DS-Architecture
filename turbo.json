{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "lint": {},
    "test-ui": {},
    "deploy": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "dependsOn": ["build"],
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test-changed": {},
    "ci": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "dependsOn": ["lint", "test"]
    }
  }
}
