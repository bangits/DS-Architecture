{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "lint": {},
    "semantic-release": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "dependsOn": ["build"]
    },
    "deploy": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
